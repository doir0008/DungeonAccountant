<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="106dp"
        android:background="#6A6868"
        android:layout_marginTop="20dp"
        android:id="@+id/warriorLayout"
        android:layout_alignParentTop="true"
        android:padding="2dp">

        <TextView
            android:text="Warrior"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/warrior"
            android:id="@+id/imageView"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="10dp"
            android:layout_width="99dp"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <TextView
                android:text="Martial Prowess +1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/warriorSkill1"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Superior Gear +2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/warriorSkill2"
                android:textSize="10sp"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Appraise +3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/warriorSkill3"
                android:textSize="10sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="125dp">

            <Button
                android:text="Martial Prowess +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/warriorSkill1Btn"
                android:background="#484848"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textColor="#95989A" />

            <Button
                android:text="Superior Gear +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/warriorSkill2Btn"
                android:background="#484848"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:textColor="#95989A" />

            <Button
                android:text="Appraise +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/warriorSkill3Btn"
                android:background="#484848"
                android:layout_height="20dp"
                android:textAllCaps="false"
                android:textSize="8sp"
                android:textColor="#95989A" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="106dp"
        android:background="#6A6868"
        android:layout_marginTop="20dp"
        android:id="@+id/rogueLayout"
        android:padding="2dp"
        android:layout_below="@+id/warriorLayout"
        android:layout_alignStart="@+id/warriorLayout">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/rogue"
            android:id="@+id/imageView2"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="10dp"
            android:layout_width="99dp"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <TextView
                android:text="Scouting +1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rogueSkill1"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Guild Contacts +2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rogueSkill2"
                android:textSize="10sp"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Smooth Talk +3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rogueSkill3"
                android:textSize="10sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="125dp">

            <Button
                android:text="Scouting +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/rogueSkill1Btn"
                android:background="#484848"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textColor="#95989A" />

            <Button
                android:text="Guild Contacts +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/rogueSkill2Btn"
                android:background="#484848"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:textColor="#95989A" />

            <Button
                android:text="Smooth Talk +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/rogueSkill3Btn"
                android:background="#484848"
                android:layout_height="20dp"
                android:textAllCaps="false"
                android:textSize="8sp"
                android:textColor="#95989A" />
        </LinearLayout>

        <TextView
            android:text="Rogue"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="315dp"
        android:layout_height="106dp"
        android:id="@+id/mageLayout"
        android:background="#6A6868"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rogueLayout"
        android:layout_alignStart="@+id/rogueLayout"
        android:padding="2dp">

        <TextView
            android:text="Mage"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/mage"
            android:id="@+id/imageView3"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginStart="10dp"
            android:layout_width="99dp"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <TextView
                android:text="Superior Casting +1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mageSkill1"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Chronoscrying +2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mageSkill2"
                android:textSize="10sp"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Alchemy +3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mageSkill3"
                android:textSize="10sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="125dp">

            <Button
                android:text="Superior Casting +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/mageSkill1Btn"
                android:background="#484848"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textColor="#95989A" />

            <Button
                android:text="Chronoscrying +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/mageSkill2Btn"
                android:background="#484848"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:textColor="#95989A" />

            <Button
                android:text="Alchemy +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/mageSkill3Btn"
                android:background="#484848"
                android:layout_height="20dp"
                android:textAllCaps="false"
                android:textSize="8sp"
                android:textColor="#95989A" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="315dp"
        android:layout_height="106dp"
        android:id="@+id/druidLayout"
        android:background="#6A6868"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mageLayout"
        android:layout_alignStart="@+id/mageLayout"
        android:padding="2dp">

        <TextView
            android:text="Druid"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/druid"
            android:id="@+id/imageView4"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginStart="10dp"
            android:layout_width="99dp"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <TextView
                android:text="Forage +1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/druidSkill1"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Combat Healing +2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/druidSkill2"
                android:textSize="10sp"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Temple Contacts +3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/druidSkill3"
                android:textSize="10sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="125dp">

            <Button
                android:text="Forage +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/druidSkill1Btn"
                android:background="#484848"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textColor="#95989A" />

            <Button
                android:text="Combat Healing +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/druidSkill2Btn"
                android:background="#484848"
                android:layout_marginBottom="10dp"
                android:layout_height="20dp"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:textColor="#95989A" />

            <Button
                android:text="Temple Contacts +1 for 100gp"
                android:layout_width="match_parent"
                android:id="@+id/druidSkill3Btn"
                android:background="#484848"
                android:layout_height="20dp"
                android:textAllCaps="false"
                android:textSize="8sp"
                android:textColor="#95989A" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:text="1000gp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="12dp"
        android:id="@+id/gold"
        android:textSize="20sp"
        android:textColor="#D4AF37" />

    <TextView
        android:text="Total Gold: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:id="@+id/textView2"
        android:textColor="#95989A"
        android:textSize="20sp"
        android:layout_below="@+id/druidLayout"
        android:layout_alignStart="@+id/druidLayout"
        android:layout_marginTop="35dp" />

</RelativeLayout>